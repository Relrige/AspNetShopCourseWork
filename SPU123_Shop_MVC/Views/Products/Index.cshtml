@model List<Data.Entities.Product>

<h1>Product List</h1>
<p>You can manage the available products in the database...</p>
<a asp-controller="Products" asp-action="Create" class="btn btn-primary">
    <i class="bi bi-plus-lg"></i> Create New Product
</a>
<hr />

